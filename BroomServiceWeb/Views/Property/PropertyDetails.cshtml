@model BroomServiceWeb.Models.PropertyModel
@using BroomServiceWeb.Resources;
@using BroomServiceWeb.Helpers;

<div class="property_list_box" style="height: auto !important;margin-bottom: 40px;">
    <div class="name_edit d-flex justify-content-between">
        <h3>@Model.Name</h3>
        @if (Session["UserType"] != null)
        {
            if ((int)Session["UserType"] == Enums.UserTypeEnum.Customer.GetHashCode())
            {
                <div class="edit_del_icons">
                    <a href="/Property/AddProperty?id=@Model.Id"><i class="fas fa-pencil-alt edit"></i></a>
                </div>
            }
        }

        @if (Session["AdminType"] != null)
        {
            if (Convert.ToInt32(Session["AdminType"]) != Enums.UserTypeEnum.Admin.GetHashCode())
            {
                <div class="edit_del_icons">
                    <a href="/Property/AddProperty?id=@Model.Id"><i class="fas fa-pencil-alt edit"></i></a>
                </div>
            }
        }

    </div>
    <h4>@Resource.type_of_property<span>@Model.Type</span></h4>
    <div class="location_div">
        <img src="~/Images/location_pin.png" alt="location pin" />
        <div class="location_address">
            @Model.Address
        </div>
    </div>
    @if (Model.ShortTermApartment.Value)
    {
        <div class="apartment_div">
            <div class="location_address">
                @Resource.short_term_airbnb_apartment
            </div>
        </div>
    }
</div>


<div class="repeat_div">
    <div class="work_label">@Resource.floor</div>
    <div class="work_value">@Model.FloorNumber</div>
</div>


