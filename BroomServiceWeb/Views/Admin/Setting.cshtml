@model BroomServiceWeb.ViewModels.SettingModel
@using BroomServiceWeb.Resources

@{
    ViewBag.Title = "Setting";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
 
<h2 class="heading-top">@Resource.settings</h2>
<div class="row">
    <div class="col-md-12">
        <div class="card">
             
            <div class="card-body">
                @using (Html.BeginForm("Setting", "Admin", FormMethod.Post, new { @class = "form-horizontal style-form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label>@Resource.price_percnt</label>
                        @Html.TextBoxFor(m => m.AdminPricePer, new { @class = "form-control"})
                        @Html.ValidationMessageFor(m => m.AdminPricePer, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-primary submit-button">@Resource.submit</button>
                }
            </div>
        </div>
    </div>
</div>

