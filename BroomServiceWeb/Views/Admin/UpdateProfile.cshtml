@model BroomServiceWeb.ViewModels.ProfileViewModel
@using BroomServiceWeb.Resources

@{
    ViewBag.Title = "Update Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="heading-top">@Resource.update_profile</h2>
            <div class="row">
                <div class="col-md-12">
                    <div class="card"> 
                        <div class="card-body">
                            <div class="basic-elements">
                                @using (Html.BeginForm("UpdateProfile", "Admin", FormMethod.Post, new { @class = "login-form" }))
                                {
                                <form>
                                    <div class="form-group">
                                        <label>@Resource.first_name</label>
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = Resource.enter_first_name })
                                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })

                                        @*<input asp-for="FullName" class="form-control" placeholder="Enter name" />
            <span asp-validation-for="FullName" class="text-danger"></span>*@
                                    </div>


                                    <div class="form-group">
                                        <label>@Resource.last_name</label>
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = Resource.enter_last_name })
                                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })

                                        @*<input asp-for="FullName" class="form-control" placeholder="Enter name" />
            <span asp-validation-for="FullName" class="text-danger"></span>*@
                                    </div>

                                    <div class="form-group">
                                        <label>@Resource.email</label>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = Resource.enteremail })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                                        @*<input asp-for="Email" class="form-control" placeholder="Enter email" />
            <span asp-validation-for="Email" class="text-danger"></span>*@
                                    </div>
                                    <div class="form-group">
                                        <label>@Resource.phone_number</label>
                                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = Resource.enter_phone_number })
                                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })

                                        @*<input asp-for="Phone" class="form-control" placeholder="Enter phone" />
            <span asp-validation-for="Phone" class="text-danger"></span>*@
                                    </div>

                                    <button type="submit" class="btn btn-primary submit-button">@Resource.submit</button>
                                </form>
                                    <br />
                                    if (TempData["ErrorMsg"] != null)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @TempData["ErrorMsg"]
                                        </div>
                                    }
                                    if (TempData["SuccessMsg"] != null)
                                    {
                                        <div class="alert alert-success" role="alert">
                                            @TempData["SuccessMsg"]
                                        </div>
                                    }

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        

