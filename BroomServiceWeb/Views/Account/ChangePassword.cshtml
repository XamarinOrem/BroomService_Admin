@model BroomServiceWeb.ViewModels.ChangePasswordModel
@using BroomServiceWeb.Resources

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}

<div class="container-fluid height_100 d-flex align-items-center justify-content-center">
    <div class="div_width">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="row">
                    <div class="col-md-6 p-0">
                        <img src="~/Images/login_main_image.png" class="w-100 i_height" alt="iomage" />
                    </div>
                    <div class="col-md-6 p-0">
                        <div class="all_box_main d-flex align-items-center">
                            <div class="login_div">
                                <h1>@Resource.change_password</h1>
                                <p></p>
                                @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
                                {

                                    if (TempData["ErrorMsg"] != null)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @TempData["ErrorMsg"]
                                        </div>
                                    }
                                    if (TempData["SuccessMsg"] != null)
                                    {
                                        <div class="alert alert-success" role="alert">
                                            @TempData["SuccessMsg"]
                                        </div>
                                    }
                                        <div class="form-group">
                                            @Html.PasswordFor(m => m.oldPassword, new { @class = "form-control form_input", placeholder = Resource.enter_old_password, @required = "required" })
                                            @Html.ValidationMessageFor(m => m.oldPassword, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            @Html.PasswordFor(m => m.newPassword, new { @class = "form-control form_input", placeholder = Resource.enter_new_password, @required = "required" })
                                            @Html.ValidationMessageFor(m => m.newPassword, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            @Html.PasswordFor(m => m.confirmPassword, new { @class = "form-control form_input", placeholder = Resource.enter_confirm_password, @required = "required" })
                                            @Html.ValidationMessageFor(m => m.confirmPassword, "", new { @class = "text-danger" })
                                        </div>
                                    <div class="text-center mt-5">
                                        <button type="submit" class="btn login_signup_main">@Resource.submit</button>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="back_to_home">
                            <a href="/Profile/MyProfile"><i class="fas fa-arrow-left"></i>@Resource.back_to_profile</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        $(".alert").fadeOut(10000);
    });
</script>